{% extends "_main.jinja" %}

{% block title %} Articles {% endblock %}


{% block main %}
    {% if "logged" in session %}
        <a href="{{ url_for("admin.view_add_article") }}">add new artcle</a>
    {% endif %}
    {% if articles %}
        <ul>
        {% for article in articles %}
            <li>
                <h2> <a href="{{ url_for("blog.view_article", art_id=article.id) }}"> {{article.title}} </h2>
                <p> {{ article.content | truncate(100) }} </p>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <p> No Articles :( </p>
    {% endif %}
{% endblock %}